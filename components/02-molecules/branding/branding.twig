<div{{ attributes.addClass('branding') }}>
  <div class="branding__row">
    {% if site_logo %}
      <div class="branding__logo">
        <a href="{{ url }}" rel="home" class="branding__site-logo">
          <img src="{{ site_logo }}" alt="{{ 'Home'|t }}" />
        </a>
      </div>
    {% endif %}
    
    {% if site_name or site_slogan %}
    <div class="branding__site-name-slogan">

      {% if site_name %}
        <div class="branding__site-name">
          <div class="site-name">
            <a href="{{ path('<front>') }}" rel="home">{{ site_name }}</a>
          </div>
        </div><!-- end col -->
      {% endif %}
      
            
      {% if site_slogan %}
        <div class="branding__site-slogan">
          {{ site_slogan }}
        </div>
      {% endif %}
      
    </div>
  {% endif %}
    
  </div>
</div>
