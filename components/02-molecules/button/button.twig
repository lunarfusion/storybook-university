<{{ html_tag|default('button')}}{{attributes.setAttribute('href',url).setAttribute('id',input_id).addClass('button').addClass(state).addClass(extra_classes|default([]))}}>
  {% block button_content %}
      {# if is circle, content is sr-only #}
      <span class="button__content">
        {{ content }}
      </span>
      
      {% if has_icon == true %}
        <span class="button__icon">
            {{ source(path ~ '../src/icons/' ~ icon ~ '.svg') }}
        </span>
      {% endif %}
  {% endblock %}
</{{ html_tag|default('button') }}>
